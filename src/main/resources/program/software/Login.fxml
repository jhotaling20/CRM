<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="program.software.LoginController">
    <VBox alignment="CENTER" layoutX="150" layoutY="50" prefHeight="300" prefWidth="300" spacing="20">
        <Label styleClass="header-label" text="Sign In" />
        <TextField fx:id="usernameField" promptText="Username" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <Button fx:id="signInButton" styleClass="signin-button" text="Sign In" />
        <HBox alignment="CENTER" spacing="10">
            <Label text="New here?" />
            <Hyperlink fx:id="signUpLink" text="Sign Up" />
        </HBox>
      <Label fx:id="feedbackLabel" prefHeight="15.0" prefWidth="80.0" />
    </VBox>
</AnchorPane>
