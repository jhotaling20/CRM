<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@style.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16">
    <VBox alignment="CENTER" spacing="20" layoutX="150" layoutY="50" prefHeight="300" prefWidth="300">
        <Label text="Sign In" styleClass="header-label"/>
        <TextField fx:id="usernameField" promptText="Username"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <Button fx:id="signInButton" text="Sign In" styleClass="signin-button"/>
        <HBox spacing="10" alignment="CENTER">
            <Label text="New here?"/>
            <Hyperlink fx:id="signUpLink" text="Sign Up"/>
        </HBox>
    </VBox>
</AnchorPane>
