<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="600.0" prefWidth="800.0">
    <VBox spacing="10" padding="10">
        <Label text="Company Initialization"/>

        <TitledPane text="Company Details" collapsible="false">
            <GridPane hgap="10" vgap="10">
                <Label text="Company Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="companyNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Address:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="addressField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Phone Number:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="phoneNumberField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="emailField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Tax ID Number:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="taxIDField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>
        </TitledPane>

        <TitledPane text="Pricing Variables" collapsible="false">
            <VBox spacing="10">
                <!-- Add dynamic pricing variable fields here -->
            </VBox>
        </TitledPane>

        <TitledPane text="Custom Equations" collapsible="false">
            <VBox spacing="10">
                <!-- Add dynamic equation input fields here -->
            </VBox>
        </TitledPane>

        <Button text="Save Configuration" fx:id="saveButton"/>
    </VBox>
</AnchorPane>
