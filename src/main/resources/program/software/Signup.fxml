<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" stylesheets="@style.css" fx:controller="program.software.SignupController" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" spacing="20" layoutX="150" layoutY="50" prefHeight="400" prefWidth="300">
        <Label text="Sign Up" styleClass="header-label"/>
        <TextField fx:id="firstNameField" promptText="First Name"/>
        <TextField fx:id="lastNameField" promptText="Last Name"/>
        <TextField fx:id="emailField" promptText="Email"/>
        <TextField fx:id="companyIdField" promptText="Company ID (optional)"/>
        <TextField fx:id="companyNameField" promptText="Company Name (optional)"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <Label fx:id="passwordCriteriaLabel" text="Password must be at least 10 characters long, include an uppercase letter, a number, and a special character." wrapText="true" styleClass="info-label"/>
        <Button fx:id="signUpButton" text="Sign Up" styleClass="signin-button"/>
    </VBox>
</AnchorPane>
